<style>
	header {
		box-sizing: border-box;
		display: flex;
		width: 100%;
		height: 64px;
		background-color: white;
		padding: 16px;
		align-items: center;
	}
	header img {
		content: url('/logo.svg');
		height: 32px;
		margin-right: 20px;
	}
	header .input-wrapper {
		flex-grow: 1;
	}
	.input-inner-wrapper {
		position: relative;
		margin: auto;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.input-inner-wrapper input {
		max-width: 60vw;
		height: 32px;
		border-radius: 16px;
		font-size: 1rem;
		border: none;
		flex-grow: 1;
		background-color: #ddd;
		outline-color: #aaa;
		padding-left: 12px;
		padding-right: 12px;
		min-width: 0;
	}
	
	header input:focus {
		background-color: white;
	}
	
	header label.material-symbols-outlined {
		margin-left: 20px;
		color: #888;
	}
	
	header label.material-symbols-outlined:hover {
		cursor: pointer;
	}
	
	.right {
		margin-left: auto;
		padding-left: 2vw;
		display: flex;
		align-items: center;
	}
	
	.right > *{
		margin-left: 10px;
	}
	
	.right span.material-symbols-outlined {
		font-size: 40px;
		user-select: none;
		border-radius: 50%;
	}
	
	.right span.material-symbols-outlined:hover {
		cursor: pointer;
		color: white;
		background-color: black;
		box-shadow: 0 0 0 2px inset black;
	}
	
	.avatar {
		display: block;
		float: right;
		border-radius: 50%;
		height: 48px;
		width: 48px;
		background-image: url('cat.png');
		background-size: cover;
	}
	
	.avatar:hover {
		cursor: pointer;
		box-shadow: 0 0 0 4px inset #ddd;
		
	}
	
	@media (max-width:800px) {
		header img {
			content: url('/logo_small.svg');
		}
		header label.material-symbols-outlined {
			position: absolute;
			right: 12px;
		}
		.input-inner-wrapper input {
			width: 100%;
			max-width: none;
		}
		.right span.material-symbols-outlined {
			font-size: 32px;
		}
		.avatar {
			height: 40px;
			width: 40px;
		}
		.right > *{
			margin-left: 4px;
		}
	}
	
</style>
<header>
	<img />
	<% if(show_options) { %>
		<div class="input-wrapper">
			<div class="input-inner-wrapper">
				<input id="search" />
				<label for="search" class="material-symbols-outlined">search</label>
			</div>
		</div>
	<% } %>
	<div class="right">
		<span class="material-symbols-outlined">add_circle</span>
		<span class="material-symbols-outlined">explore</span>
		<div class="avatar"></div>
	</div>
</header>